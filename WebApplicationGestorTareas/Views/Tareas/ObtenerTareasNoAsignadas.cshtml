@model PagedList.IPagedList<WebApplicationGestorTareas.Tarea>

@using PagedList.Mvc;

<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Tareas</title>
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/5.3.0/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://use.fontawesome.com/releases/v6.5.2/css/all.css" rel="stylesheet">
    <style>

        .topnav a {
            float: left;
            display: block;
            color: #f8f9fa;
            text-align: center;
            padding: 14px 90px;
            text-decoration: none;
        }

        th, td {
            text-align: center;
        }
    </style>
</head>
<body style=" background-color: #fff3b8;">

    <div class="header" style="padding: 20px; text-align: center;">
        <h1> Tareas <i class="fa-solid fa-clipboard-list"></i></h1>
    </div>

    <nav class="topnav navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item" style="padding:0px 80px">
                        <a class="nav-link" href="ObtenerTareas">Todas <i class="fa-solid fa-list-check"></i></a>
                    </li>
                    <li class="nav-item" style="padding:0px 90px">
                        <a class="nav-link" href="ObtenerTareasNoAsignadas">No asignadas <i class="fa-solid fa-user-xmark"></i></a>
                    </li>
                    <li class="nav-item" style="padding:0px 90px">
                        <a class="nav-link" href="ObtenerTareasAsignadas">Asignadas <i class="fa-solid fa-user-tag"></i></a>
                    </li>
                    <li class="nav-item" style="padding:0px 90px">
                        <a class="nav-link" href="ObtenerTareasCompletadas">Completadas <i class="fa-solid fa-user-check"></i></a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>



    <div class="container mt-4">
        <table class="table table-striped table-bordered" style=" background-color: #fff; border-radius: 8px;">
            <thead class="table-dark">
                <tr>
                    <th>Nombre</th>
                    <th>Plazo (días)</th>
                    <th>Puntos</th>
                    <th>Nivel de Dificultad</th>
                    <th>Estado</th>
                    <th>Fecha de Inicio</th>
                    <th>Fecha de Fin</th>
                    <th>Castigo</th>
                    <th>Usuario</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.Nombre)</td>
                        <td>@Html.DisplayFor(modelItem => item.Plazo)</td>
                        <td>@Html.DisplayFor(modelItem => item.Puntos)</td>
                        <td>@Html.DisplayFor(modelItem => item.NivelDificultad)</td>
                        <td>@Html.DisplayFor(modelItem => item.Estado)</td>
                        <td>@Html.DisplayFor(modelItem => item.FechaInicio)</td>
                        <td>@Html.DisplayFor(modelItem => item.FechaFin)</td>
                        <td>@Html.DisplayFor(modelItem => item.Castigo.Nombre)</td>
                        <td>@Html.DisplayFor(modelItem => item.Usuario.Nombre)</td>
                        <td>
                            @Html.ActionLink("Asignar tarea", "AsignarTarea", new { id = item.Id }, new { @class = "btn btn-warning btn-sm text-white" })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        @Html.PagedListPager(Model, page => Url.Action("ObtenerTareasNoAsignadas",
new { sortOrder = ViewBag.CurrentSort, currentFilter = ViewBag.CurrentFilter, page = page }))
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/js/all.min.js"></script>
</body>
</html>
