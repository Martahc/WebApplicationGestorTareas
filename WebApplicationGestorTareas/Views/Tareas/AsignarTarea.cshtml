@model WebApplicationGestorTareas.Tarea

@{
    ViewBag.Title = "AsignarTarea";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Asignar tarea</title>

    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://use.fontawesome.com/releases/v6.5.2/css/all.css" rel="stylesheet">
    <style>
        body {
            background-color: #f8f9fa;
            margin: 0;
            padding: 0;
        }

        .container {
            display: flex;
            justify-content: center;
            padding: 0;
        }

        .card {
            background-color: #ffffff;
            border: none;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            padding: 20px;
            width: 100%;
            max-width: 600px;
            margin: 20px;
        }

        .card-body {
            background-color: #e3f2fd;
            border-radius: 10px;
            padding: 20px;
        }

        h4 {
            color: #4a7894;
            margin-bottom: 20px;
        }

        .form-group label {
            color: #495057;
            font-weight: bold;
        }

        .btn-custom {
            background-color: #4a7894;
            color: #fff;
            border: none;
            transition: background-color 0.3s;
            padding: 10px 20px;
            border-radius: 5px;
            margin-right: 10px;
        }

            .btn-custom:hover {
                background-color: #3f6176;
                color: #fff;
            }

        .btn-dark {
            padding: 10px 20px;
            border-radius: 5px;
            margin-left: 10px;
        }
    </style>
</head>
<body>
    <div class="container">
        <form method="post" class="card">
            @Html.AntiForgeryToken()

            <div class="card-body">
                <h4 class="text-center">Tarea: @Html.DisplayFor(model => model.Nombre)</h4>
                <hr />

                <div class="form-group row mb-3">
                    <label for="Usuario" class="col-md-4 col-form-label">Usuario <i class="fa-regular fa-user"></i></label>
                    <div class="col-md-8">
                        @Html.DropDownList("Usuario_Id", null, "Seleccione un usuario...", new { @class = "form-control" })
                    </div>
                </div>

                <div class="form-group row mb-3">
                    <label for="FechaInicio" class="col-md-4 col-form-label">Fecha de Inicio <i class="fa-solid fa-calendar-day"></i></label>
                    <div class="col-md-8">
                        <input type="date" id="FechaInicio" name="FechaInicio" class="form-control" />
                    </div>
                </div>

                <div class="form-group text-center">
                    <button type="submit" class="btn btn-custom">Asignar</button>
                    <a href="@Url.Action("ObtenerTareasNoAsignadas")" class="btn btn-dark">Cancelar</a>
                </div>

            </div>
        </form>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
