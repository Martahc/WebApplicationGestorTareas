@model WebApplicationGestorTareas.Models.CastigoDto

@{
    ViewBag.Title = "Crear Castigo";
}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Create Castigo</title>

    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://use.fontawesome.com/releases/v6.5.2/css/all.css" rel="stylesheet">
</head>

<body style="background-color: #f0616b;">
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <h2 class="text-center">Crear castigo <i class="fas fa-handcuffs fa-bounce"></i></h2>
                <hr />

                <form asp-action="CrearCastigo" method="post">

                    @Html.AntiForgeryToken()
                    <div class="card">
                        <div class="card-body">

                            <div class="mb-3">
                                <label for="Nombre" class="form-label">Nombre del castigo</label>
                                <input type="text" id="Nombre" name="Nombre" class="form-control" required="required" maxlength="20" title="El nombre del castigo es obligatorio (máximo 20 caracteres).">
                            </div>

                            <div class="mb-3">
                                <label for="Descripcion" class="form-label">Descripción del castigo</label>
                                <input type="text" id="Descripcion" name="Descripcion" class="form-control" maxlength="200" title="La descripción del castigo no puede exceder los 200 caracteres.">
                            </div>

                            <div class="mb-3">
                                <label for="Duracion" class="form-label">Duración del castigo</label>
                                <div class="input-group">
                                    <input type="number" id="Duracion" name="Duracion" class="form-control" required="required" min="1" max="30" title="La duración debe ser un número positivo.">
                                    <span class="input-group-text">días</span>
                                </div>
                            </div>

                            <div class="form-group text-center">
                                <button type="submit" class="btn btn-light" style="border-color:black;">
                                    Crear
                                </button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="container mt-3 text-center">
        <a href="@Url.Action("VerMiPerfil","Usuarios")" class="btn btn-secondary" style="padding:4px 15px">
            <i class="fas fa-arrow-left"></i>
        </a>
    </div>

    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>

</html>
