@model PagedList.IPagedList<WebApplicationGestorTareas.Usuario>

@using PagedList.Mvc;

<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />


@{
    ViewBag.Title = "Index";
}

<link href="https://use.fontawesome.com/releases/v6.5.2/css/all.css" rel="stylesheet">

<style>

    body {
        background-color: #8cba99;
    }

    .table th, .table td {
        vertical-align: middle;
    }
</style>

<h1 class="text-center mb-4" style=" margin-top: 30px;">Perfiles <i class="fa-solid fa-users"></i></h1>

<table class="table table-hover" style=" margin-top: 30px; background-color: white; width: 900px; margin-left: auto; margin-right: auto; ">
    <thead>
        <tr>
            <th scope="col" style="width: 20%;">Imagen</th>
            <th scope="col" style="width: 55%;">Nombre</th>
            <th scope="col" style="width: 25%;">Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <img src="@Url.Action("GetImage", "Usuarios", new { imageName = item.Imagen })" alt="Imagen del usuario" class="img-thumbnail" style=" width: 100px; height: auto;">
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nombre)
                </td>
                <td>
                    <a href="@Url.Action("Detalles", "Usuarios", new { id = item.Id })" class="btn btn-dark-green" style=" background-color: #276a39; border-color: #204d29; color: white;">Detalles</a>
                    <a href="@Url.Action("EliminarPerfil", "Usuarios", new { idUsuario = item.Id })" class="btn btn-danger" style=" color: white;">Eliminar <i class="fas fa-trash"></i></a>
                </td>

            </tr>
        }
    </tbody>
</table>

@Html.PagedListPager(Model, page => Url.Action("ObtenerUsuarios",
    new { page, sortOrder = ViewBag.CurrentSort, currentFilter = ViewBag.CurrentFilter }))