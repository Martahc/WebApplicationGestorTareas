@model IEnumerable<WebApplicationGestorTareas.Usuario>

@{
    ViewBag.Title = "Index";
}

<h2>Perfiles</h2>

<table class="table">
    <tr>
        <th>

        </th>
        <th>
            @Html.DisplayNameFor(model => model.Nombre)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            <img src="@Url.Action("GetImage", "Usuarios", new { imageName = item.Imagen })" alt="Imagen del usuario" />
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Nombre)
        </td>
        <td>
            @Html.ActionLink("Detalles", "Detalles", new { id = item.Id })
            @Html.ActionLink("Eliminar", "EliminarPerfil", new { idUsuario = item.Id })
        </td>
    </tr>
}

</table>
