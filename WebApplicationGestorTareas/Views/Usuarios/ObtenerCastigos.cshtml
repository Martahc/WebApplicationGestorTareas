@model PagedList.IPagedList<WebApplicationGestorTareas.Castigo>

@using PagedList.Mvc;

<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />

@{
    ViewBag.Title = "Index";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>

    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://use.fontawesome.com/releases/v6.5.2/css/all.css" rel="stylesheet">
    <style>
       
        .content-wrapper {
            background-color: #ffffff;
            padding: 20px;
            margin-top: 30px;
        }
        .table thead th {
            background-color: #f0616b;
            color: #ffffff;
        }

        .action-column {
            width: 40%; 
        }

        .btn-sm {
            width: 30%; 
        }
    </style>
</head>
<body style=" background-color: #f0616b;">
    <div class="container mt-10">
        <div class="content-wrapper">
            <div class="header d-flex justify-content-between align-items-center" style=" margin-bottom: 40px;">
                <h2 style=" color: black; margin-top:30px">Castigos <i class="fas fa-handcuffs ml-2"></i></h2>
            </div>

            <div class="table-responsive">
                <table class="table table-striped table-bordered">
                    <thead>
                        <tr>
                            <th>Nombre</th>
                            <th class="action-column">Acción</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Nombre</td>
                                <td class="text-center action-column">
                                    <a href="@Url.Action("ObtenerCastigo", new { idUsuario = ViewBag.idUsuario, idCastigo = item.Id })" class="btn btn-outline-dark btn-sm">Detalles</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
                @Html.PagedListPager(Model, page => Url.Action("ObtenerCastigos",
                    new { id = ViewBag.idUsuario, page, sortOrder = ViewBag.CurrentSort, currentFilter = ViewBag.CurrentFilter }))
            </div>

            <div class="footer-btn" style=" text-align: right; margin-top: 20px;">
                <a href="@Url.Action("Detalles", new { id = ViewBag.idUsuario })" class="btn btn-dark" style="background-color: #343a40; border-color: #343a40;">Volver al perfil <i class="fas fa-arrow-right"></i></a>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
